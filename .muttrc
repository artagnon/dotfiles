set folder = "imaps://imap.gmail.com:993/"
set spoolfile = "=INBOX"
set postponed ="=[Gmail]/Drafts"
set trash = "=[Gmail]/Trash"
set header_cache = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates

# Some keybindings
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"
macro index gt "<change-folder>=[Gmail]/Sent Mail<enter>" "Go to Sent Mail"
macro index gs "<change-folder>=[Gmail]/Starred<enter>" "Go to Starred Mail"
macro index gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"
macro index gc "<change-folder>=Chatlog<enter>" "Go to Chatlog"
macro index y "<save-message>=[Gmail]/All Mail<enter><enter>" "Archive message"
macro index Y "<tag-thread><tag-prefix><save-message>=[Gmail]/All Mail<enter><enter>" "Archive thread"
macro index s "<save-message>~/tmp/incoming.mbox" "Save message"
macro index S "<tag-thread><tag-prefix><save-message>~/tmp/incoming.mbox<enter><enter>" "Save thread"
bind index I flag-message
bind index c mail
bind index a group-reply
bind index o display-message

macro pager gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro pager ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"
macro pager gt "<change-folder>=[Gmail]/Sent Mail<enter>" "Go to Sent Mail"
macro pager gs "<change-folder>=[Gmail]/Starred<enter>" "Go to Starred Mail"
macro pager gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"
macro pager y "<exit><save-message>=[Gmail]/All Mail<enter><enter>" "Archive message"
macro pager Y "<exit><tag-thread><tag-prefix><save-message>=[Gmail]/All Mail<enter><enter>" "Archive thread"
macro index s "<exit><save-message>~/tmp/incoming.mbox" "Save message"
macro pager S "<exit><tag-thread><tag-prefix><save-message>~/tmp/incoming.mbox<enter><enter>" "Save thread"
bind index I flag-message
bind pager c mail
bind pager a group-reply

macro compose y "<send-message>"

# More keybindings
bind generic <esc>< first-entry
bind generic <esc>> last-entry
bind index <esc>< first-entry
bind index <esc>> last-entry

bind generic \Cs search
bind generic \Cr search-reverse
bind index \Cs search
bind index \Cr search-reverse
bind pager \Cs search
bind pager \Cr search-reverse

bind index \Cn next-undeleted
bind index \Cp previous-undeleted
bind pager \Cn next-line
bind pager \Cp previous-line

bind editor <space> noop
bind editor <TAB> complete-query
bind editor \Ct complete

# For better looks
set markers = no
set pager_index_lines = 5
set sort = "threads"
set sort_aux = "reverse-last-date-received"
set editor = "emacsclient"

# Configure some variables
set imap_keepalive = 500
set ssl_starttls = yes
set move = no
set copy = no
set record = ""
set delete = yes
set edit_headers = no
set autoedit = no
set beep = no
set include = yes
set attribution = "%n writes:"
set index_format = "%Z | %D | %-20.20F %s"
set date_format = "%H:%M / %e %b"
set followup_to = no
set honor_followup_to = no

# Google contacts
set query_command = "~/.mutt/contactos.rb --mutt %s"
set query_format = "%4c %t %-40.40a %-40.40n %?e?(%e)?"

# Default color definitions
color normal     default        default
color hdrdefault green          default
color quoted	 green          default
color quoted1    yellow         default
color quoted2    red            default
color signature  cyan           default
color indicator  brightyellow   red
color error      brightred      default
color status	 brightwhite    cyan
color tree	 brightmagenta  default
color tilde	 blue           default
color attachment brightyellow   default
color markers	 brightred      default
color message    white          default
color search     brightwhite    magenta
color bold       brightyellow   default

